# WealthPath Environment Configuration
# Generated by Ansible on {{ ansible_facts['date_time']['iso8601'] }}

# Database
POSTGRES_USER=wealthpath
POSTGRES_PASSWORD={{ postgres_password }}
POSTGRES_DB=wealthpath

# Authentication
JWT_SECRET={{ jwt_secret }}

# Domain & URLs
DOMAIN={{ final_domain }}
FRONTEND_URL={{ protocol }}://{{ final_domain }}
ALLOWED_ORIGINS={{ protocol }}://{{ final_domain }}

# SSL - Uses Let's Encrypt by default (no configuration needed)

# OAuth - Google
{% if google_client_id is defined and google_client_id %}
GOOGLE_CLIENT_ID={{ google_client_id }}
GOOGLE_CLIENT_SECRET={{ google_client_secret }}
GOOGLE_REDIRECT_URI={{ protocol }}://{{ final_domain }}/api/auth/google/callback
{% endif %}

# OAuth - Facebook
{% if facebook_app_id is defined and facebook_app_id %}
FACEBOOK_APP_ID={{ facebook_app_id }}
FACEBOOK_APP_SECRET={{ facebook_app_secret }}
FACEBOOK_REDIRECT_URI={{ protocol }}://{{ final_domain }}/api/auth/facebook/callback
{% endif %}

# AI Chat
{% if openai_api_key is defined and openai_api_key %}
OPENAI_API_KEY={{ openai_api_key }}
{% endif %}

# SEO & Analytics (Frontend)
NEXT_PUBLIC_BASE_URL={{ protocol }}://{{ final_domain }}
{% if google_site_verification is defined and google_site_verification %}
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION={{ google_site_verification }}
{% endif %}
{% if ga_measurement_id is defined and ga_measurement_id %}
NEXT_PUBLIC_GA_MEASUREMENT_ID={{ ga_measurement_id }}
{% endif %}

# Admin Panel
{% if admin_password is defined and admin_password %}
ADMIN_USERNAME={{ admin_username | default('admin') }}
ADMIN_PASSWORD={{ admin_password }}
{% endif %}

# Dozzle Log Viewer
{% if dozzle_password is defined and dozzle_password %}
DOZZLE_USERNAME={{ dozzle_username | default('admin') }}
DOZZLE_PASSWORD={{ dozzle_password }}
{% endif %}

